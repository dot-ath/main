{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/party-server/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/node:webpack",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/party-server",
        "main": "apps/party-server/src/main.ts",
        "tsConfig": "apps/party-server/tsconfig.app.json",
        "assets": ["apps/party-server/src/assets"]
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": true,
          "inspect": false,
          "generatePackageJson": true,
          "fileReplacements": [
            {
              "replace": "apps/party-server/src/environments/environment.ts",
              "with": "apps/party-server/src/environments/environment.prod.ts"
            }
          ]
        }
      }
    },
    "serve": {
      "executor": "@nrwl/node:node",
      "options": {
        "buildTarget": "party-server:build"
      },
      "configurations": {
        "production": {
          "buildTarget": "party-server:build:production"
        }
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "flyctl deploy --config ./apps/party-server/fly.toml"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["apps/party-server/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/party-server"],
      "options": {
        "jestConfig": "apps/party-server/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": []
}
