{
  "name": "strikers",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "games/strikers/src",
  "projectType": "library",
  "tags": [],
  "targets": {
    "lint": {
      "executor": "@nx/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["games/strikers/**/*.{ts,tsx,js,jsx}"]
      }
    },
    "storybook": {
      "executor": "@nx/storybook:storybook",
      "options": {
        "port": 4400,
        "configDir": "games/strikers/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@nx/storybook:build",
      "outputs": ["{options.outputDir}"],
      "options": {
        "outputDir": "dist/storybook/strikers",
        "configDir": "games/strikers/.storybook"
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "serve-storybook": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "strikers:build-storybook",
        "parallel": false,
        "staticFilePath": "dist/storybook/strikers",
        "port": 80,
        "brotli": true,
        "host": "0.0.0.0"
      }
    }
  }
}
